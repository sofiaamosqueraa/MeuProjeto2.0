@model MeuProjeto2._0.Models.TextRequestModel

@{
    ViewBag.Title = "Formulário Inteligente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 p-4 bg-white shadow rounded">
    <h4 class="mb-4 text-dark border-bottom pb-2">Formulário Inteligente</h4>

    <!-- CAMPO DE TEXTO -->
    <div class="mb-4 row">
        <label for="userInput" class="col-sm-2 col-form-label text-end">Texto Descritivo</label>
        <div class="col-sm-10">
            <textarea id="userInput" class="form-control" rows="4" placeholder="Ex: Trabalhei na empresa X, entrei às 10h, saí às 18h..."></textarea>
        </div>
    </div>

    <div class="text-end mb-4">
        <button onclick="enviarTexto()" type="button" class="btn btn-primary px-4">Enviar</button>
    </div>

    <!-- TABS -->
    <ul class="nav nav-tabs mb-3" id="formTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="empresa-tab" data-bs-toggle="tab" data-bs-target="#empresa" type="button" role="tab">Empresa</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="horario-tab" data-bs-toggle="tab" data-bs-target="#horario" type="button" role="tab">Horário</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="descricao-tab" data-bs-toggle="tab" data-bs-target="#descricao" type="button" role="tab">Resumo e Descrição</button>
        </li>
    </ul>

    <!-- CONTEÚDO DAS TABS -->
    <div class="tab-content" id="formTabsContent">

        <!-- TAB EMPRESA -->
        <div class="tab-pane fade show active" id="empresa" role="tabpanel">
            <div class="row g-4">
                <div class="col-md-6">
                    <label for="empresa" class="form-label">Empresa</label>
                    <input id="empresa" type="text" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label for="empresaDescricao" class="form-label">Descrição da Empresa</label>
                    <input id="empresaDescricao" type="text" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label for="pedidoPor" class="form-label">Pedido por</label>
                    <input id="pedidoPor" type="text" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label for="pedido" class="form-label">Pedido</label>
                    <input id="pedido" type="text" class="form-control" />
                </div>
            </div>
        </div>

        <!-- TAB HORÁRIO -->
        <div class="tab-pane fade" id="horario" role="tabpanel">
            <div class="row g-4 mt-1">
                <div class="col-md-4">
                    <label for="data" class="form-label">Data</label>
                    <input id="data" type="date" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label for="horaI" class="form-label">Hora Início</label>
                    <input id="horaI" type="time" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label for="horaFim" class="form-label">Hora Fim</label>
                    <input id="horaFim" type="time" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label for="ausente" class="form-label">Tempo Ausente</label>
                    <input id="ausente" type="text" class="form-control" placeholder="00:00" />
                </div>
                <div class="col-md-6">
                    <label for="tempoDeslocacao" class="form-label">Tempo Deslocação</label>
                    <input id="tempoDeslocacao" type="text" class="form-control" placeholder="00:00" />
                </div>
                <div class="col-md-6">
                    <label for="gastos" class="form-label">Gastos (€)</label>
                    <input id="gastos" type="text" class="form-control" />
                </div>
            </div>
        </div>

        <!-- TAB DESCRIÇÃO -->
        <div class="tab-pane fade" id="descricao" role="tabpanel">
            <div class="mt-3">
                <label for="reg" class="form-label">Descrição da Tarefa Externa</label>
                <textarea id="reg" class="form-control" rows="5" placeholder="Resumo automático da tarefa..."></textarea>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/form.js"></script>
}

<!-- STYLES -->
<style>
    body {
        background-color: #f4f6f8;
        font-family: 'Segoe UI', sans-serif;
    }

    .form-control {
        font-size: 0.95rem;
        border-radius: 6px;
    }

    .form-label {
        font-weight: 500;
        color: #2c3e50;
    }

    .btn-primary {
        background-color: #3a57c4;
        border-color: #3a57c4;
    }

        .btn-primary:hover {
            background-color: #2e44a3;
            border-color: #2e44a3;
        }

    .nav-tabs .nav-link.active {
        font-weight: 600;
        border-bottom: 2px solid #3a57c4;
    }

    .tab-content {
        padding-top: 10px;
    }

    textarea.form-control {
        resize: vertical;
    }
</style>
